@using ECommercial.Entities.Concrete
@model UserAddress
@{
    ViewBag.Title = "UserDetails";
    Layout = "~/Areas/AdministratorArea/Views/Shared/_AdminLayout.cshtml";
}
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-3">

                <!-- Profile Image -->
                <div class="card card-primary card-outline">
                    <div class="card-body box-profile">
                        <div class="text-center">
                            <img class="profile-user-img img-fluid img-circle" src="~/Uploads/no-image-icon-4.png" alt="User profile picture">
                        </div>
                        <h3 class="profile-username text-center">@Model.User.FirstName @Model.User.LastName</h3>

                        <p class="text-muted text-center">@Model.User.Phone</p>

                        <ul class="list-group list-group-unbordered mb-3">
                            <li class="list-group-item">
                                <b>Satın Alınan Ürün</b> <a class="float-right">1,322</a>
                            </li>
                            <li class="list-group-item">
                                <b>Yapılan Yorumlar</b> <a class="float-right">543</a>
                            </li>
                            <li class="list-group-item">
                                <b>Gönderilen Mesajlar</b> <a class="float-right">13,287</a>
                            </li>
                        </ul>

                        <a href="#" class="btn btn-primary btn-block"><b>Alışveriş Geçmişi</b></a>
                    </div>
                    <!-- /.card-body -->

                </div>
                <!-- /.card -->

            </div>
            <!-- About Me Box -->
            <div class="card card-primary col-sm-9">
                <div class="card-header">
                    <h3 class="card-title">Kulanıcı Bilgileri</h3>
                </div>
                <!-- /.card-header -->
                <div class="card-body">
                    <strong><i class="fas fa-map-marker-alt mr-1"></i> Adres</strong>
                    <h3>@Model.AddressName</h3>
                    <p class="text-muted">@Model.Address</p>
                    <hr>
                    <strong><i class="fas fa-pencil-alt mr-1"></i>Email</strong>
                    <p class="text-muted">@Model.User.Email</p>
                    <hr>

                    <strong><i class="far fa-file-alt "></i> Kulanıcı Notu</strong>

                    <p class="text-muted">Not Ekle</p>
                </div>
                <!-- /.card-body -->
            </div>
            <!-- /.card -->
        </div>
        <!-- /.row -->
    </div><!-- /.container-fluid -->
</section>

