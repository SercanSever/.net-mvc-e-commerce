@using ECommercial.Entities.Concrete
@model Product
@{
    ViewBag.Title = "UpdateProduct";
    Layout = "~/Areas/AdministratorArea/Views/Shared/_AdminLayout.cshtml";
}

@using (Html.BeginForm("UpdateProduct", "Products", FormMethod.Post))
{
    @Html.HiddenFor(x => x.Id)
    <div class="card card-info">
        <div class="card-header">
            <h3 class="card-title">@Model.Name - Güncelle</h3>
        </div>
        <div class="card-body shadow">
            <div class="form-group">
                <div class="input-group-prepend">
                    <span class="input-group-text"><i class="fas fa-bookmark"></i></span>
                    @Html.DropDownListFor(x => x.CategoryId, (List<SelectListItem>)ViewBag.categoryListItems, new { @class = "custom-select rounded-0" })
                </div>
            </div>
            <div class="input-group mb-3">
                <div class="input-group-prepend">
                    <span class="input-group-text"><i class="fas fa-book-open"></i></span>
                </div>
                @Html.TextBoxFor(x => x.Name, new { @class = "form-control", @value = "@Model.Name", @type = "text" })
            </div>

            <div class="input-group mb-3">
                <div class="input-group-prepend">
                    <span class="input-group-text"><strong>₺</strong></span>
                </div>
                @Html.TextBoxFor(x => x.UnitPrice, new { @class = "form-control", @value = "@Model.UnitPrice" })
                <div class="input-group-append">
                    <span class="input-group-text">.00</span>
                </div>
            </div>

            <div class="input-group mb-3">
                <div class="input-group-prepend">
                    <span class="input-group-text"><i class="fas fa-box-open"></i></span>
                </div>
                @Html.TextBoxFor(x => x.UnitsInStock, new { @class = "form-control", @value = "@Model.UnitsInStock" })
            </div>

            <div class="input-group mb-3">
                <div class="input-group-prepend">
                    <span class="input-group-text"><i class="fas fa-percent"></i></span>
                </div>
                @Html.TextBoxFor(x => x.Name, new { @class = "form-control", @value = "@Model.PercentOfDiscount" })
            </div>

            <div class="form-group">
                <div class="custom-file">
                    <input type="file" class="custom-file-input" id="productImage">
                    <label class="custom-file-label" for="productImage">Fotoğraf Seç</label>
                </div>
            </div>
            <button type="submit" class="btn btn-block btn-outline-warning">Güncelle</button>
        </div>
        <!-- /.card-body -->
    </div>
}

