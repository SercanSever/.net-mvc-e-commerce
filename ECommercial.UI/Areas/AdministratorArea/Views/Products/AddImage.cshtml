@using ECommercial.Entities.Concrete
@model Product
@{
    ViewBag.Title = "AddImage";
    Layout = "~/Areas/AdministratorArea/Views/Shared/_AdminLayout.cshtml";
}
<style>
    .photo-gallery {
        color: #313437;
        background-color: #fff;
    }

        .photo-gallery p {
            color: #7d8285;
        }

        .photo-gallery h2 {
            font-weight: bold;
            margin-bottom: 40px;
            padding-top: 40px;
            color: inherit;
        }

        /*.media (max-width:767px) {
      .photo-gallery h2 {
        margin-bottom:25px;
        padding-top:25px;
        font-size:24px;
      }
    }*/

        .photo-gallery .intro {
            font-size: 16px;
            max-width: 500px;
            margin: 0 auto 40px;
        }

            .photo-gallery .intro p {
                margin-bottom: 0;
            }

        .photo-gallery .photos {
            padding-bottom: 20px;
        }

        .photo-gallery .item {
            padding-bottom: 30px;
        }
</style>

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.1.3/css/bootstrap.min.css">
<link rel="stylesheet" href="assets/css/style.css">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/lightbox2/2.8.2/css/lightbox.min.css">

@using (Html.BeginForm("AddImage", "Products", FormMethod.Post, new { enctype = "multipart/form-data" }))
{

    @Html.HiddenFor(x => x.Id)
    <div class="col-sm-12 mb-sm-4 p-2 shadow">
        <div class="intro">
            <h4 class="text-left">@Model.Name - Fotoğraf Ekle</h4>
        </div>
        <div class="form-group">
            <div class="form-group">
                <input type="file" name="file" id="file" multiple />
            </div>
        </div>
        <button type="submit" class="btn btn-block btn-outline-info mb-sm-2">Kaydet</button>
    </div>

}
<div class="photo-gallery shadow">
    <div class="container">
        <div class="intro">
            <h2 class="text-center">@Model.Name - Fotoğraflar</h2>
        </div>
        <div class="row photos">
            @foreach (var item in Model.ProductImages)
            {
                <div class="col-sm-5 col-md-4 col-lg-3 item"><a href="~/Uploads/@item.Image" data-lightbox="photos"><img class="img-fluid" src="~/Uploads/@item.Image" style="height:290px;"></a></div>
            }
        </div>
    </div>
</div>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.1.3/js/bootstrap.bundle.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/lightbox2/2.8.2/js/lightbox.min.js"></script>

