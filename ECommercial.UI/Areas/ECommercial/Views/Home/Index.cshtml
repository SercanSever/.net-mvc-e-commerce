                            <a class="nav-link" href="/ECommercial/Home/Index"><span class="badge bg-info m-sm-2">#</span>Ana Sayfa</a>
                        </li>
                        @foreach (var category in Model.Item1)
                        {
                            <li class="nav-item">
                                <a class="nav-link" href="#"><span class="badge bg-info m-sm-2">@category.Products.Count</span>@category.CategoryName</a>
                            </li>
                        }
                    </ul>
                </nav>
            </div>
            <div class="col-md-6">
                <div class="header-slider normal-slider">
                    @foreach (var product in Model.Item2)
                    {
                        <div class="header-slider-item">
                            <img src="~/Uploads/@product.Image" alt="Slider Image" style="width: 600px; height:400px;" />
                            <div class="header-slider-caption">
                                <p>@product.Name</p>
                                <a class="btn" href="/ECommercial/ProductDetail/@product.ProductId"><i class="fa fa-shopping-cart"></i>Ürün Detayı</a>
                            </div>
                        </div>
                    }

                </div>
            </div>
            <div class="col-md-3">
                <div class="header-img">
                    <div class="img-item">
                        <img src="~/ECommerce FrontEnd Template/ecommerce-html-template/img/category-1.jpg" />
