@using ECommercial.Entities.Dtos
@model List<ProductWithImageDto>
<div class="recent-product product">
    <div class="container-fluid">
        <div class="section-header">
            <h1>İndirimdeki Ürünler</h1>
        </div>
        <div class="row align-items-center product-slider product-slider-4">
            @foreach (var product in Model)
            {
                <div class="col-lg-3">
                    <div class="product-item">
                        <div class="product-title">
                            <a href="#">@product.Name</a>
                           
                        </div>
                        <div class="product-image">
                            <a href="product-detail.html">
                                <img src="~/Uploads/@product.Image" alt="Product Image">
                            </a>
                            <div class="product-action">
                                <a href="#"><i class="fa fa-heart"></i></a>
                                <a href="/ECommercial/Products/ProductDetails/@product.ProductId"><i class="fa fa-search"></i></a>
                            </div>
                        </div>
                        <div class="product-price">
                            <h3>@product.DiscountedPrice<span>₺</span></h3>
                            <h3><span style="text-decoration:line-through">@product.UnitPrice</span><span>₺</span></h3>
                            <a class="btn" href="/ECommercial/Products/ProductDetails/@product.ProductId">İncele</a>
                        </div>
                    </div>
                </div>
            }

        </div>
    </div>
</div>
