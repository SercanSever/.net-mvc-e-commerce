@using ECommercial.Entities.Concrete
@model List<Product>
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/ECommercial/Views/Shared/_ECommercialLayout.cshtml";
}

<div class="cart-page">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-8">
                <h2>@Model.Count adet ürün sepete eklendi.</h2>
                <div class="cart-page-inner">
                    <div class="table-responsive">
                        <table class="table table-bordered">
                            <thead class="thead-dark">
                                <tr>
                                    <th>Ürün Adı</th>
                                    <th>Adet</th>
                                    <th>Fiyat</th>
                                    <th>Toplam</th>
                                    <th>Sil</th>
                                </tr>
                            </thead>
                            <tbody class="align-middle">
                                @foreach (var products in Model)
                                {
                                    <tr>
                                        <td>
                                            <div class="img">
                                                <a href="/ECommercial/Products/ProductDetails/@products.Id">
                                                    <p>@products.Name</p>
                                                </a>
                                            </div>
                                        </td>
                                        <td>
                                            <div class="qty">
                                                <button class="btn-minus"><i class="fa fa-minus"></i></button>
                                                <input value="@products.OrderQuantity" />
                                                <button class="btn-plus"><i class="fa fa-plus"></i></button>
                                            </div>
                                        </td>
                                        <td>@products.UnitPrice ₺</td>
                                        <td>
                                            @{
                                                var total = Model.Sum(x => x.UnitPrice * x.OrderQuantity);
                                                @total
                                            }
                                        </td>
                                        <td><a href="/ECommercial/Carts/DeleteItem/@products.Id"><i class="fa fa-trash"></i></a></td>
                                    </tr>

                                }

                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            <div class="col-lg-4">
                <div class="cart-page-inner">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="cart-summary">
                                <div class="cart-content">
                                    <h1>Cart Summary</h1>
                                    <p>Sub Total<span>$99</span></p>
                                    <p>Shipping Cost<span>$1</span></p>
                                    <h2>Grand Total<span>$100</span></h2>
                                </div>
                                <div class="cart-btn">
                                    <button>Update Cart</button>
                                    <button>Checkout</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
