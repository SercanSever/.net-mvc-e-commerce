@using ECommercial.Entities.Dtos
@using ECommercial.Entities.Concrete
@model Tuple<List<ProductWithImageDto>, List<Category>>
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/ECommercial/Views/Shared/_ECommercialLayout.cshtml";
}

<!-- Product List Start -->
<div class="product-view">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-8">
                <div class="row">
                    <div class="col-md-12">
                        <div class="product-view-top">
                            <div class="row">
                                <div class="col-md-4">
                                    <div class="product-search">
                                        @using (Html.BeginForm("Index", "Products", FormMethod.Get))
                                        {
                                            @Html.TextBox("searchFilter", "", new { @placeholder = "Ara" })
                                            <button type="submit"><i class="fa fa-search"></i></button>
                                        }
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="product-short">
                                        <div class="dropdown">
                                            <div class="dropdown-toggle" data-toggle="dropdown">Ürünleri Sırala</div>
                                            <div class="dropdown-menu dropdown-menu-right">
                                                <a href="/ECommercial/Products/SortByNewest" class="dropdown-item">En Yeni</a>
                                                <a href="/ECommercial/Products/SortByPopularity" class="dropdown-item">En Popüler</a>
                                                <a href="/ECommercial/Products/SortByMostSale" class="dropdown-item">En Çok Satılan</a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="product-price-range">
                                        <div class="dropdown">
                                            <div class="dropdown-toggle" data-toggle="dropdown">Fiyata Göre Sırala</div>
                                            <div class="dropdown-menu dropdown-menu-right">
                                                <a href="/ECommercial/Products/SortByRising" class="dropdown-item">Azalandan Yükseğe</a>
                                                <a href="/ECommercial/Products/SortByDecreasing" class="dropdown-item">Yüksekten Azalana</a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    @foreach (var product in Model.Item1)
                    {
                        <div class="col-md-4">
                            <div class="product-item">
                                <div class="product-title">
                                    <a href="#">@product.Name</a>
                                    <div class="ratting">
                                        <i class="fa fa-star"></i>
                                        <i class="fa fa-star"></i>
                                        <i class="fa fa-star"></i>
                                        <i class="fa fa-star"></i>
                                        <i class="fa fa-star"></i>
                                    </div>
                                </div>
                                <div class="product-image">
                                    <a href="product-detail.html">
                                        <img src="~/ECommerce FrontEnd Template/ecommerce-html-template/img/product-1.jpg" alt="Product Image">
                                    </a>
                                    <div class="product-action">
                                        <a href="#"><i class="fa fa-cart-plus"></i></a>
                                        <a href="#"><i class="fa fa-heart"></i></a>
                                        <a href="/ECommercial/Products/ProductDetails/@product.ProductId"><i class="fa fa-search"></i></a>
                                    </div>
                                </div>
                                <div class="product-price">
                                    <h3>@product.UnitPrice<span>₺</span></h3>
                                    <a class="btn btn-sm mt-sm-1" href=""><i class="fa fa-shopping-cart"></i>Sepete Ekle</a>
                                </div>
                            </div>
                        </div>

                    }

                </div>

                <!-- Pagination Start -->
                <div class="col-md-12">
                    <nav aria-label="Page navigation example">
                        <ul class="pagination justify-content-center">
                            <li class="page-item disabled">
                                <a class="page-link" href="#" tabindex="-1">Previous</a>
                            </li>
                            <li class="page-item active"><a class="page-link" href="#">1</a></li>
                            <li class="page-item"><a class="page-link" href="#">2</a></li>
                            <li class="page-item"><a class="page-link" href="#">3</a></li>
                            <li class="page-item">
                                <a class="page-link" href="#">Next</a>
                            </li>
                        </ul>
                    </nav>
                </div>
                <!-- Pagination Start -->
            </div>

            <!-- Side Bar Start -->
            <div class="col-lg-4 sidebar">
                <div class="sidebar-widget category">
                    <div class="sidebar-widget brands">
                        <h2 class="title">Kategoriler</h2>
                        <ul>
                            @foreach (var category in Model.Item2)
                            {
                                <li><a href="/ECommercial/Products/GetProductsWithCategoryId/@category.CategoryId">@category.CategoryName </a><span>(45)</span></li>
                            }
                        </ul>
                    </div>
                </div>

                <div class="sidebar-widget widget-slider">
                    <div class="sidebar-slider normal-slider">

                        @foreach (var product in Model.Item1)
                        {
                            <div class="product-item">
                                <div class="product-title">
                                    <a href="#">@product.Name</a>
                                    <div class="ratting">
                                        <i class="fa fa-star"></i>
                                        <i class="fa fa-star"></i>
                                        <i class="fa fa-star"></i>
                                        <i class="fa fa-star"></i>
                                        <i class="fa fa-star"></i>
                                    </div>
                                </div>
                                <div class="product-image">
                                    <a href="product-detail.html">
                                        <img src="~/Uploads/@product.Image" alt="Product Image">
                                    </a>
                                    <div class="product-action">
                                        <a href="#"><i class="fa fa-cart-plus"></i></a>
                                        <a href="#"><i class="fa fa-heart"></i></a>
                                        <a href="/ECommercial/Products/ProductDetails/@product.ProductId"><i class="fa fa-search"></i></a>
                                    </div>
                                </div>
                                <div class="product-price">
                                    <h3>@product.UnitPrice<span>₺</span></h3>
                                    <a class="btn" href=""><i class="fa fa-shopping-cart"></i>Sepete Ekle</a>
                                </div>
                            </div>
                        }



                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Product List End -->
    <!-- Brand Start -->
    <div class="brand">
        <div class="container-fluid">
            <div class="brand-slider">
                <div class="brand-item"><img src="~/ECommerce FrontEnd Template/ecommerce-html-template/img/brand-1.png" alt=""></div>
                <div class="brand-item"><img src="~/ECommerce FrontEnd Template/ecommerce-html-template/img/brand-2.png" alt=""></div>
                <div class="brand-item"><img src="~/ECommerce FrontEnd Template/ecommerce-html-template/img/brand-3.png" alt=""></div>
                <div class="brand-item"><img src="~/ECommerce FrontEnd Template/ecommerce-html-template/img/brand-4.png" alt=""></div>
                <div class="brand-item"><img src="~/ECommerce FrontEnd Template/ecommerce-html-template/img/brand-5.png" alt=""></div>
                <div class="brand-item"><img src="~/ECommerce FrontEnd Template/ecommerce-html-template/img/brand-6.png" alt=""></div>
            </div>
        </div>
    </div>
    <!-- Brand End -->
